{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  {% block content %}
    <div class="col-md-6 order-md-last">
      {% if not paragraph.field_video.isEmpty %}
        {{ content.field_video }}
      {% elseif not paragraph.field_image.isEmpty %}
        {{ content.field_image }}
      {% endif %}
    </div>
  {% endblock %}
  <div class="col-md-6">{{ content.field_description }}
    <a href="{{ content.field_button_link.0["#url"].toString }}" class="btn-iccwc btn-next">{{ content.field_button_text }}</a>
  </div>
{% endblock paragraph %}
